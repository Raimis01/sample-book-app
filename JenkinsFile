pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script{
                    build()
                }
            }
        }
        stage('Deploy to DEV') {
            steps {
                script{
                    deploy("DEV")
                }
            }
        }
        stage('Test to DEV') {
            steps {
                script{
                    test("DEV")
                }
            }
        }
        stage('Deploy to STG') {
            steps {
                script{
                    deploy("STG")
                }
            }
        }
        stage('Test to STG') {
            steps {
                script{
                    test("STG")
                }
            }
        }
        stage('Deploy to PROD') {
            steps {
                script{
                    deploy("PROD")
                }
            }
        }
        stage('Test to PROD') {
            steps {
                script{
                    test("PROD")
                }
            }
        }

    }
}


def deploy(String env){
    echo "Start to deploy to ${env}"
}
def test(String env){
    echo "Start to test on ${env}"
}
def build(){
    echo 'Start to build node app'
}